# Create repack script for this step.
	$(APPEND) -tn "$(VPOX_WIN_INST_REPACK_DIR)/1-compile-VPoxMerge$(module)_$(lang).cmd" \
       	'if ".%KBUILD_DEVTOOLS%" == "." (echo KBUILD_DEVTOOLS is not set & exit /b1)' \
