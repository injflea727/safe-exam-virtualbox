#
# Build the multi-language version of the .MSI installer (final installer).
#
# This is done by creating binary .MST diffs of all the language-specific installers
# against the en_US one, and then merging the diffs into the en_US one using tools
# from the MS Installer SDK.
#
define def_vpox_create_mst
$(VPOX_WIN_INST_OUT_DIR)/$(lang)/$(lang).mst \
+ $(VPOX_WIN_INST_REPACK_DIR)/$(lang).mst: \
		$(VPOX_WIN_INST_OUT_DIR)/en_US/$(PACKAGE_NAME_LANG)_en_US.msi \
		$(VPOX_WIN_INST_OUT_DIR)/$(lang)/VirtualPox_$(lang).wixobj \
		$(VPOX_WIN_INST_OUT_DIR)/NLS/Language_$(lang).wxl \
		$(VPOX_WIN_INST_OUT_DIR)/NLS/License_$(lang).wxl \
		$(PATH_STAGE_BIN)/VPoxInstallHelper.dll \
		$(VPOX_SVN_REV_KMK) \
		$(VPOX_WIN_INST_MAKEFILE_DEP) \
		$(if-expr defined(VPOX_WITH_MSI_HACK),$(MsiHack_0_OUTDIR)/MsiHack.dll,) \
		$(if-expr defined(VPOX_WITH_MSI_HACK),$(MsiHack_0_OUTDIR)/MsiHackExtension.dll,) \
		| $$$$(dir $$$$@) $(VPOX_WIN_INST_REPACK_DIR)/
	$(call MSG_L1,Creating language diff for $(lang))
	kmk_time $(VPOX_PATH_WIX)/light.exe -v -nologo \
		-loc $(VPOX_WIN_INST_OUT_DIR)/NLS/Language_$(lang).wxl \
		-loc $(VPOX_WIN_INST_OUT_DIR)/NLS/License_$(lang).wxl \
		-ext $(VPOX_PATH_WIX)/WixUIExtension.dll \
		-ext $(VPOX_PATH_WIX)/WixDifxAppExtension.dll \
		-ext $(VPOX_PATH_WIX)/WixUtilExtension.dll \
               $(if-expr defined(VPOX_WITH_MSI_HACK),-ext $(MsiHack_0_OUTDIR)/MsiHackExtension.dll,) \
		$(VPOX_MSI_ICE_IGNORE) \
		-out $$(@D)/$(PACKAGE_NAME_LANG)_$(lang).msi \
		$$(@D)/VirtualPox_$(lang).wixobj \
		$(VPOX_PATH_WIX)/difxapp_$(if-expr "$(KBUILD_TARGET_ARCH)" == "x86",x86,x64).wixlib
	$(REDIRECT) -C $$(@D) -- $(VPOX_PATH_MSITRAN) -g $$< $(PACKAGE_NAME_LANG)_$(lang).msi $(lang).mst
	$(CP) -f -- "$(VPOX_WIN_INST_OUT_DIR)/$(lang)/$(lang).mst" "$(VPOX_WIN_INST_REPACK_DIR)/$(lang).mst"
	$(RM) -f -- $$(@D)/$(PACKAGE_NAME_LANG)_$(lang).msi \
		$$(@D)/$(PACKAGE_NAME_LANG)_$(lang).wixpdb \
		$$(@D)/common.cab

endef

$(foreach lang,$(filter-out en_US, $(VPOX_INSTALLER_LANGUAGES)), \
	$(eval local lang_id := $(VPOX_BRAND_$(lang)_LANG_ID)) \
	$(eval $(def_vpox_create_mst)))


# Create WISUMINFO argument.
VPOX_INS_PROD_ARCH.amd64 = x64
VPOX_INS_PROD_ARCH.x86   = Intel
VPOX_INS_PROD_ARCH := $(VPOX_INS_PROD_ARCH.$(KBUILD_TARGET_ARCH))
$(if $(VPOX_INS_PROD_ARCH),,$(error VPOX_INS_PROD_ARCH is empty!))
VPOX_INS_PROD_LANG := 7="$(VPOX_INS_PROD_ARCH);1033
$(foreach lang, $(filter-out en_US,$(VPOX_INSTALLER_LANGUAGES))\
	, $(eval VPOX_INS_PROD_LANG := $(VPOX_INS_PROD_LANG)$(COMMA)$(VPOX_BRAND_$(lang)_LANG_ID)))
VPOX_INS_PROD_LANG := $(VPOX_INS_PROD_LANG)"

# The multilingual installer rule.
$(VPOX_WIN_INST_OUT_DIR)/$(PACKAGE_NAME_LANG).msi \
+ $(VPOX_WIN_INST_REPACK_DIR)/3-multilingual-$(PACKAGE_NAME_LANG).cmd: \
		$(VPOX_WIN_INST_OUT_DIR)/en_US/$(PACKAGE_NAME_LANG)_en_US.msi \
		$(foreach lang,$(filter-out en_US,$(VPOX_INSTALLER_LANGUAGES)),$(VPOX_WIN_INST_OUT_DIR)/$(lang)/$(lang).mst)
	$(call MSG_L1,Creating final multilingual MSI)
	$(QUIET)$(RM) -f -- \
		$(wildcard $(@D)/$(PACKAGE_BASE)-r*.msi $(VPOX_WIN_INST_REPACK_DIR)/3-multilingual-$(PACKAGE_BASE)-r*.cmd )
	$(CP) -f -- "$<" "$@"

	$(foreach lang,$(filter-out en_US,$(VPOX_INSTALLER_LANGUAGES)), \
		$(NLTAB)$(REDIRECT) -C $(@D)/$(lang) -- $(VPOX_PATH_MSIDB) -d $@ -r $(lang).mst \
		$(NLTAB)$(REDIRECT) -C $(@D)/$(lang) -- cscript.exe /nologo $(VPOX_PATH_WISUBSTG) $@ $(lang).mst $(VPOX_BRAND_$(lang)_LANG_ID) )

	$(REDIRECT) -C $(@D) -- cscript.exe /nologo $(VPOX_PATH_WISUBSTG) $(@F)
	$(REDIRECT) -C $(@D) -- cscript.exe /nologo $(VPOX_PATH_WISUMINFO) $@ $(VPOX_INS_PROD_LANG)
	$(call VPOX_SIGN_FILE_FN,$@,$(VPOX_PRODUCT) $(VPOX_VERSION_STRING)r$(VPOX_SVN_REV) ($(KBUILD_TARGET_ARCH)),,,disable-dual-signing)

# Create repack script for this step.
	$(APPEND) -nt "$(VPOX_WIN_INST_REPACK_DIR)/3-multilingual-$(PACKAGE_NAME_LANG).cmd" \
		'if ".%KBUILD_DEVTOOLS%" == "." (echo KBUILD_DEVTOOLS is not set & exit /b1)' \
		'if ".%KBUILD_BIN_PATH%" == "." (echo KBUILD_BIN_PATH is not set & exit /b1)' \
		'copy /y  "$(<F)" "$(@F)" || exit /b1' \
		$(subst $(KBUILD_BIN_PATH),%KBUILD_BIN_PATH%,$(subst $(KBUILD_DEVTOOLS),%KBUILD_DEVTOOLS%,\
		$(foreach lang,$(filter-out en_US,$(VPOX_INSTALLER_LANGUAGES)), \
			'$(VPOX_PATH_MSIDB) -d $(@F) -r $(lang).mst || exit /b1' \
			'cscript.exe /nologo $(VPOX_PATH_WISUBSTG) $(@F) $(lang).mst $(VPOX_BRAND_$(lang)_LANG_ID) || exit /b1') \
		'cscript.exe /nologo $(VPOX_PATH_WISUBSTG) $(@F) || exit /b1' \
		'cscript.exe /nologo $(VPOX_PATH_WISUMINFO) $(@F) $(VPOX_INS_PROD_LANG) || exit /b1' \
		'call sign-sha1.cmd $(@F) || exit /b1' \
		) ) \
        $(if-expr defined(VPOX_WITH_COMBINED_PACKAGE),'copy /y "$(@F)" "$(notdir $(PACKAGE_NAME_FINAL))" || exit /b1',) \
		'@echo Created multilanguage MSI: $(notdir $(PACKAGE_NAME_FINAL))'

# Copy multilingual installer to bin.
$(PACKAGE_NAME_FINAL): $(VPOX_WIN_INST_OUT_DIR)/$(PACKAGE_NAME_LANG).msi | $$(dir $$@)
	$(QUIET)$(RM) -f $(wildcard $(@D)/$(PACKAGE_BASE)-r*$(if-expr defined(VPOX_WITH_COMBINED_PACKAGE),_$(KBUILD_TARGET_ARCH),).msi)
	$(INSTALL_STAGING) -- $< $@


if defined(VPOX_WITH_COMBINED_PACKAGE) && "$(KBUILD_TARGET_ARCH)" == "x86"
#
# Make the multi-architecture installer by calling our stub builder
# with both platform installers (x86 and amd64) + common cab. The common
# cab only is needed when we don't use merge modules. We only
# need to do this once; so do it on x86 only.
#
$(PATH_STAGE_BIN)/$(PACKAGE_NAME_MULTIARCH_FINAL) \
+ $(VPOX_WIN_INST_REPACK_DIR)/4-multiarch-$(PACKAGE_NAME_MULTIARCH_FINAL).cmd: \
		$(PATH_MULTIARCH_TEMP)/$(PACKAGE_NAME_MULTIARCH.x86) \
		$(PATH_MULTIARCH_TEMP)/$(PACKAGE_NAME_MULTIARCH.amd64) \
		$(PATH_STAGE_BIN)/VPoxStub.exe \
		$$(VPoxStubBld_1_TARGET)
	$(call MSG_L1,Building Windows combined package)
	$(QUIET)$(RM) -f -- $(wildcard $(subst r$(VPOX_SVN_REV),r*, \
		$@ \
		$(VPOX_WIN_INST_REPACK_DIR)/4-multiarch-$(PACKAGE_NAME_MULTIARCH_FINAL).cmd ) )
	$(if-expr defined(VPOX_WITH_MSM_INSTALL),,$(call VPOX_SIGN_FILE_FN,$(PACKAGE_NAME_MULTIARCH_COMMONCAB)))
	$(REDIRECT) -C $(@D) -- \
		$(VPoxStubBld_1_TARGET) -out $@ \
			-target-x86 $(PATH_MULTIARCH_TEMP)/$(PACKAGE_NAME_MULTIARCH.x86) \
			-target-amd64 $(PATH_MULTIARCH_TEMP)/$(PACKAGE_NAME_MULTIARCH.amd64) \
			$(if-expr defined(VPOX_WITH_MSM_INSTALL),,-target-all $(PACKAGE_NAME_MULTIARCH_COMMONCAB)) \
			-stub $(PATH_STAGE_BIN)/VPoxStub.exe
	$(VPOX_VCC_EDITBIN) /IntegrityCheck:NO $@
	$(call VPOX_SIGN_FILE_FN,$@)
# Create repack script for this step.
	$(APPEND) -nt "$(VPOX_WIN_INST_REPACK_DIR)/4-multiarch-$(@F).cmd" \
		'if ".%KBUILD_DEVTOOLS%" == "." (echo KBUILD_DEVTOOLS is not set & exit /b1)' \
		'if ".%KBUILD_BIN_PATH%" == "." (echo KBUILD_BIN_PATH is not set & exit /b1)' \
		$(subst $(KBUILD_BIN_PATH),%KBUILD_BIN_PATH%,$(subst $(KBUILD_DEVTOOLS),%KBUILD_DEVTOOLS%, \
		$(if-expr defined(VPOX_WITH_MSM_INSTALL), \
		,'call sign-dual.cmd ../../../win.amd64/$(KBUILD_TYPE)/repack/$(notdir $(PACKAGE_NAME_MULTIARCH_COMMONCAB)) || exit /b1') \
		'..\bin\VPoxStubBld.exe ^' \
		'  -out $(@F) ^' \
		'  -target-x86 $(PACKAGE_NAME_MULTIARCH.x86) ^' \
		'  -target-amd64 ../../../win.amd64/$(KBUILD_TYPE)/repack/$(PACKAGE_NAME_MULTIARCH.amd64) ^' \
		$(if-expr defined(VPOX_WITH_MSM_INSTALL),\
		,'  -target-all ../../../win.amd64/$(KBUILD_TYPE)/repack/$(notdir $(PACKAGE_NAME_MULTIARCH_COMMONCAB)) ^' ) \
		'  -stub ../bin/VPoxStub.exe || exit /b1' \
		'$(VPOX_VCC_EDITBIN) /IntegrityCheck:NO $(@F) || exit /b1' \
		'call sign-dual.cmd $(@F) || exit /b1' \
		) ) \
		'@echo Created multiarch EXE: $(@F)'
else
#
# We still do the installer stub thing even if we only ship 64-bit, because we've
# gotten used to having it around to install the certificate and such.
#
$(PATH_STAGE_BIN)/$(PACKAGE_NAME_MULTIARCH_FINAL) \
+ $(VPOX_WIN_INST_REPACK_DIR)/4-multiarch-$(PACKAGE_NAME_MULTIARCH_FINAL).cmd: \
		$(PACKAGE_NAME_FINAL) \
		$(PATH_STAGE_BIN)/VPoxStub.exe \
		$$(VPoxStubBld_1_TARGET)
	$(call MSG_L1,Building Windows package w/ installer stub)
	$(QUIET)$(RM) -f -- $(wildcard $(subst r$(VPOX_SVN_REV),r*, \
		$@ \
		$(VPOX_WIN_INST_REPACK_DIR)/4-multiarch-$(PACKAGE_NAME_MULTIARCH_FINAL).cmd ) )
	$(REDIRECT) -C $(@D) -- \
		$(VPoxStubBld_1_TARGET) -out $@ \
			-target-$(KBUILD_TARGET_ARCH) $(PACKAGE_NAME_FINAL) \
			-stub $(PATH_STAGE_BIN)/VPoxStub.exe
	$(VPOX_VCC_EDITBIN) /IntegrityCheck:NO $@
	$(call VPOX_SIGN_FILE_FN,$@)
# Create repack script for this step.
	$(APPEND) -nt "$(VPOX_WIN_INST_REPACK_DIR)/4-multiarch-$(@F).cmd" \
		'if ".%KBUILD_DEVTOOLS%" == "." (echo KBUILD_DEVTOOLS is not set & exit /b1)' \
		'if ".%KBUILD_BIN_PATH%" == "." (echo KBUILD_BIN_PATH is not set & exit /b1)' \
		$(subst $(KBUILD_BIN_PATH),%KBUILD_BIN_PATH%,$(subst $(KBUILD_DEVTOOLS),%KBUILD_DEVTOOLS%, \
		'..\bin\VPoxStubBld.exe ^' \
		'  -out $(@F) ^' \
		'  -target-$(KBUILD_TARGET_ARCH) $(notdir $(PACKAGE_NAME_FINAL)) ^' \
		'  -stub ../bin/VPoxStub.exe || exit /b1' \
		'$(VPOX_VCC_EDITBIN) /IntegrityCheck:NO $(@F) || exit /b1' \
		'call sign-dual.cmd $(@F) || exit /b1' \
		) ) \
		'@echo Created multiarch EXE: $(@F)'
endif

#
# Repackaging scripts and files.
#
INSTALLS += RePackScripts
RePackScripts_TEMPLATE = DUMMY
RePackScripts_INST = repack/
RePackScripts_INSTTYPE = stage
RePackScripts_SOURCES = \
	Scripts/UnpackBlessedDrivers.cmd \
	$(RePackScripts_0_OUTDIR)/PackDriversForSubmission.cmd \
	$(RePackScripts_0_OUTDIR)/sign-dual.cmd \
	$(RePackScripts_0_OUTDIR)/sign-sha1.cmd \
	$(if-expr defined(VPOX_SIGN_EV_FILE_FN),$(RePackScripts_0_OUTDIR)/sign-ev.cmd,) \
	$(RePackScripts_0_OUTDIR)/VMMR0.inf \
	$(RePackScripts_0_OUTDIR)/VPoxExtPackPuel.inf
if !defined(VPOX_WITH_COMBINED_PACKAGE) || "$(KBUILD_TARGET_ARCH)" == "x86"
 RePackScripts_SOURCES += \
 	$(RePackScripts_0_OUTDIR)/RepackExtPack.cmd
endif
ifdef VPOX_WITH_COMBINED_PACKAGE
 if "$(KBUILD_TARGET_ARCH)" == "x86"
 RePackScripts_SOURCES += \
 	$(RePackScripts_0_OUTDIR)/Combined-1-Prepare.cmd \
 	$(RePackScripts_0_OUTDIR)/Combined-3-Repack.cmd \
 	$(RePackScripts_0_OUTDIR)/Combined-3-RepackAdditions.cmd
 endif
else
 RePackScripts_SOURCES += \
 	$(RePackScripts_0_OUTDIR)/Single-1-Prepare.cmd \
 	$(RePackScripts_0_OUTDIR)/Single-3-Repack.cmd

ifndef VPOX_OSE
 RePackScripts_SOURCES += \
 	$(RePackScripts_0_OUTDIR)/Single-0-All.cmd \
	Scripts/sign-attestation.sh
endif

endif
RePackScripts_CLEAN = \
	$(RePackScripts_0_OUTDIR)/PackDriversForSubmission.cmd \
	$(RePackScripts_0_OUTDIR)/sign-dual.cmd \
	$(RePackScripts_0_OUTDIR)/sign-sha1.cmd \
	$(RePackScripts_0_OUTDIR)/sign-ev.cmd \
	$(RePackScripts_0_OUTDIR)/VMMR0.inf \
	$(RePackScripts_0_OUTDIR)/VPoxExtPackPuel.inf

$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/PackDriversForSubmission.cmd,PackDriversForSubmission.cmd)
$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/RepackExtPack.cmd,RepackExtPack.cmd)
ifdef VPOX_WITH_COMBINED_PACKAGE
$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/Combined-1-Prepare.cmd,Combined-1-Prepare.cmd)
$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/Combined-3-Repack.cmd,Combined-3-Repack.cmd)
$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/Combined-3-RepackAdditions.cmd,Combined-3-RepackAdditions.cmd)
else
ifndef VPOX_OSE
$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/Single-0-All.cmd,Single-0-All.cmd)
endif
$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/Single-1-Prepare.cmd,Single-1-Prepare.cmd)
$(call VPOX_EDIT_VERSION_AND_BUILD_RULE_FN,RePackScripts,Scripts/Single-3-Repack.cmd,Single-3-Repack.cmd)
endif

$$(RePackScripts_0_OUTDIR)/sign-dual.cmd: | $$(dir $$@)
	$(APPEND) -nt "$@" \
		'if ".%KBUILD_DEVTOOLS%" == "." (echo KBUILD_DEVTOOLS is not set & exit /b 1)' \
		'if ".%KBUILD_BIN_PATH%" == "." (echo KBUILD_BIN_PATH is not set & exit /b 1)' \
		'if ".%1" == "." (echo No .cat file specified & exit /b 1)' \
		$(subst $(KBUILD_BIN_PATH),%KBUILD_BIN_PATH%,$(subst $(KBUILD_DEVTOOLS),%KBUILD_DEVTOOLS%, \
		'( $(call VPOX_SIGN_FILE_FN,%1,$(VPOX_PRODUCT) $(VPOX_VERSION_STRING)r$(VPOX_SVN_REV) ($(KBUILD_TARGET_ARCH)),,,,&&) ) || exit /b1' \
		) )

$$(RePackScripts_0_OUTDIR)/sign-sha1.cmd: | $$(dir $$@)
	$(APPEND) -nt "$@" \
		'if ".%KBUILD_DEVTOOLS%" == "." (echo KBUILD_DEVTOOLS is not set & exit /b 1)' \
		'if ".%KBUILD_BIN_PATH%" == "." (echo KBUILD_BIN_PATH is not set & exit /b 1)' \
		'if ".%1" == "." (echo No .cat file specified & exit /b 1)' \
		$(subst $(KBUILD_BIN_PATH),%KBUILD_BIN_PATH%,$(subst $(KBUILD_DEVTOOLS),%KBUILD_DEVTOOLS%, \
		'( $(call VPOX_SIGN_FILE_FN,%1,$(VPOX_PRODUCT) $(VPOX_VERSION_STRING)r$(VPOX_SVN_REV) ($(KBUILD_TARGET_ARCH)),,,disable-dual-signing,&&) ) || exit /b1' \
		) )

# The %~dp1\ oddity is working around otherwise ending with \" during
# expansion of the CCS command line which for a reason I cannot immediately
# understand appends a " to the path.
$$(RePackScripts_0_OUTDIR)/sign-ev.cmd: | $$(dir $$@)
	$(APPEND) -nt "$@" \
		'if ".%KBUILD_DEVTOOLS%" == "." (echo KBUILD_DEVTOOLS is not set & exit /b 1)' \
		'if ".%KBUILD_BIN_PATH%" == "." (echo KBUILD_BIN_PATH is not set & exit /b 1)' \
		'if ".%1" == "." (echo No .cab file specified & exit /b 1)' \
		$(subst $(KBUILD_BIN_PATH),%KBUILD_BIN_PATH%,$(subst $(KBUILD_DEVTOOLS),%KBUILD_DEVTOOLS%, \
		'( $(call VPOX_SIGN_EV_FILE_FN,%1,%~dp1\) ) || exit /b1' \
		) )

$$(RePackScripts_0_OUTDIR)/VMMR0.inf: $(PATH_SUB_CURRENT)/Scripts/VMMR0.inf $(MAKEFILE_CURRENT) | $$(dir $$@)
	$(call MSG_GENERATE,RePackScripts,$@,$<)
	$(call VPOX_EDIT_INF_FN,$<,$@)

$$(RePackScripts_0_OUTDIR)/VPoxExtPackPuel.inf: $(PATH_SUB_CURRENT)/Scripts/VPoxExtPackPuel.inf $(MAKEFILE_CURRENT) | $$(dir $$@)
	$(call MSG_GENERATE,RePackScripts,$@,$<)
	$(call VPOX_EDIT_INF_FN,$<,$@)


