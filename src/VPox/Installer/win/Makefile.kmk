	$(MKDIR) -p -- "$(VPOX_WIN_INST_REPACK_DIR)/files-VPoxMerge$(module)_$(lang)/"
	set -xe && for file in  `$(CAT_EXT) "$(VPOX_WIN_INST_REPACK_DIR)/VPoxMerge$(module)_$(lang).files"`; \
